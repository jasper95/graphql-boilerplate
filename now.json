{
  "name": "graph-spike",
  "version": 2,
  "builds": [
    { "src": "public/**/*", "use": "@now/static" },
    { "src": "build/**/*", "use": "@now/static" },
    { "src": "dist/index.js", "use": "@now/node" }
  ],
  "routes": [    
    { "src": "/static/((css|js)\/.*)", "dest": "/build/$1.br",
      "headers": {
        "Content-Encoding": "br",
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    { "src": "/static/(.*)", "dest": "/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31557600"
      }
    },
    { "src": "/service-worker.js", "dest": "/build/service-worker.js" },
    { "src": "/(.*)", "dest": "/dist/index.js" }
  ]
}